# .streamlit/secrets.toml
# RENAME this file to "secrets.toml" and fill in your values

# Database Credentials (Get these from Supabase -> Project Settings -> Database -> Connection String -> URI)
# NOTE: Use port 5432 and "postgres" as the user usually.
DB_USER = "postgres"
DB_PASSWORD = "YOUR_SUPABASE_PASSWORD"
DB_HOST = "db.your-project-ref.supabase.co"
DB_PORT = "5432"
DB_NAME = "postgres"

# Email Credentials (for sending verification codes)
# 1. Enable 2-Step Verification on your Google Account
# 2. Go to https://myaccount.google.com/apppasswords to generate an App Password
EMAIL_USER = "your-email@gmail.com"
EMAIL_PASSWORD = "your-16-digit-app-password"
